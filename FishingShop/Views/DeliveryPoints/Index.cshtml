@model IEnumerable<FishingShop.Models.DeliveryPoint>

@{
    ViewData["Title"] = "Index";
}

<h1>Our Shops</h1>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
@if(User.IsInRole("admin")){
<p>
    <a class="btn btn-dark" asp-action="Create"><i class="bi bi-plus-square-fill" style="margin-right:8px"></i>Create New</a>
</p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adress)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td class="align-middle">
               <img class="rounded-circle; align-middle" src="@item.Image" style="max-width:330px; max-height:250px" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adress)
            </td>
            @if(User.IsInRole("admin")){
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.IdPoint" style="margin-left:5px; float:right"><i class="bi bi-pencil-square"></i>Edit</a>
                <a class="btn btn-secondary" asp-action="Details" asp-route-id="@item.IdPoint" style="margin-left:5px; float:right"><i class="bi bi-eye"></i>Details</a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.IdPoint" style="margin-left:5px; float:right"><i class="bi bi-trash"></i>Delete</a>
            </td>
            }
        </tr>
}
    </tbody>
</table>
