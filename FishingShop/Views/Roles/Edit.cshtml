@using Microsoft.AspNetCore.Identity
@model FishingShop.ViewModel.ChangeRoleViewModel
<h2>Change role for @Model.UserEnail</h2>
<form asp-action="Edit" method="post">
	<input type="hidden" name="userId" value="@Model.UserId"/>
	<div class="form-group; mb-3">
		@foreach(Role role in Model.Allroles)
		{
			<label>@role.Name</label>
			<input type="checkbox" name="roles" value="@role.Name" @(Model.UserRoles.Contains(role.Name) ? "checked=\"checked\"" : "") />
		}
	</div>
	<button type="submit" class="btn btn-primary">Save</button>
</form>