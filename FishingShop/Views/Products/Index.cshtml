	ViewData["Title"] = "Products";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
<form asp-action="Index">
	<div class="form-horizontal" style="margin-bottom:5px">
		<div class="row">
			<div class="form-group col-md-4">
				<label for="control1" class="form-label" style="font-weight:bold">Filter by category <i class="bi bi-funnel-fill"></i></label>
				<select name="categoryID" id="control1" class="form-control" asp-items="ViewBag.Category"></select>
			</div>
			<div class="form-group col-md-4">
				<label class="form-label" for="form1" style="font-weight:bold">Search <i class="bi bi-search"></i></label>
				<input name="SearchString" id="form1" class="form-control">
			</div>
			<div class="form-group col-md-4 align-self-end">
				<input type="submit" name="actionButton" value="Filter" class="btn btn-dark"/>
				<a asp-action="Index" class="btn btn-danger">Clear</a>
				<a class="btn btn-dark" asp-action="Create"><i class="bi bi-plus-square-fill" style="margin-right:8px"></i>Create New</a>
			</div>
		</div>
	</div>
</form>
