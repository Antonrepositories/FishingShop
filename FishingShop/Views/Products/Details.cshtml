@model FishingShop.Models.Product

@{
	ViewData["Title"] = "Details";
}

@*<h2>@Html.DisplayFor(model => model.Name)</h2>*@
<div class="card" style="border:1px solid black; background-color:#343a40">
	<div class="row">
		<div class="col" style="max-width:450px">
			<img class="rounded" src="@Model.Image" style="max-height:350px; max-width:500px; border-right:1px solid black">
		</div>
		<div class="col" style="float:left">
			<div class="card-body">
				<h1 class="card-title" style="color:white">@Model.Name</h1>
				<h3 class="card-text" style="color:deeppink">@Model.Price грн.</h3>
				<h3 class="card-text; text-secondary">@Html.DisplayFor(model => model.CategoryNavigation.Name)</h3>
			</div>
		</div>
	</div>
</div>

<table class="table">
	<thead>
		<tr>
			<th style="font-weight:bold" class="text-center">
				<p>Text</p>
			</th>
			<th>
				<p>Rating</p>
			</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model.Reviews)
		{
			<tr>
				<td style="font-weight:bold; width:900px" class="align-middle">
					@item.Text
				</td>
				<td class="align-middle">
					@for(int i = 0; i < item.Rating; i++)
					{
						Console.WriteLine(i);
						<span class="glyphicon glyphicon-star"></span>
					}
				</td>
			</tr>
		}
	</tbody>
</table>
