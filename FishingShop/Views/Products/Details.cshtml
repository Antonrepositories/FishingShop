@model FishingShop.Models.Product

@{
	ViewData["Title"] = "Details";
}

@*<h2>@Html.DisplayFor(model => model.Name)</h2>*@
<div class="mb-1">
	<a asp-action="Index" style="color:gray">Товари</a>
</div>
<div class="card" style="border:1px solid black; background-color:#343a40">
	<div class="row">
		<div class="col" style="max-width:450px">
			<img class="rounded" src="@Model.Image" style="max-height:350px; max-width:500px; border-right:1px solid black">
		</div>
		<div class="col" style="float:left">
			<div class="card-body">
				<h1 class="card-title" style="color:white">@Model.Name</h1>
				<h3 class="card-text" style="color:deeppink">@Model.Price грн.</h3>
				<h3 class="card-text; text-secondary">@Html.DisplayFor(model => model.CategoryNavigation.Name)</h3>
			</div>
		</div>
	</div>
</div>
<h3 style="text-align:center; margin-top:15px">Description</h3>
<p>@Model.Description</p>
<h5>Add review</h5>
<form asp-action="Details">
	<input type="hidden" asp-for="IdProduct" />
	<div class="mb-3">
		<label for="customRange2" class="form-label">Rating 1-5</label>
		<input name="rating" type="range" class="form-range" min="1" max="5" id="customRange2">
	</div>
	<div class="mb-3">
		<label for="output" class="form-label">Review text</label>
		<textarea name="reviewText" class="form-control" id="output" rows="3"></textarea>
	</div>
	<div class="mb-3">
		<input type="submit" value="Submit" class="btn btn-primary" />
	</div>
</form>
<h3 style="text-align:center; margin-top:15px">Reviews</h3>
@if (Model.Reviews.Count != 0)
{
	<table class="table">
		<thead>
			<tr>
				<th style="font-weight:bold" class="text-center">
					<p>Text</p>
				</th>
				<th>
					<p>Rating</p>
				</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model.Reviews)
			{
				<tr>
					<td style="font-weight:bold; width:700px" class="align-middle">
						@item.Text
					</td>
					<td class="align-middle">
						@if (item.Rating == 5)
						{
							<i class="bi bi-star-fill" style="color:#e9a734"></i>
							<i class="bi bi-star-fill" style="color:#e9a734"></i>
							<i class="bi bi-star-fill" style="color:#e9a734"></i>
							<i class="bi bi-star-fill" style="color:#e9a734"></i>
							<i class="bi bi-star-fill" style="color:#e9a734"></i>
							<p>@item.Rating/5</p>
						}
						@if (item.Rating == 4)
						{
							<i class="bi bi-star-fill" style="color:#e9a734"></i>
							<i class="bi bi-star-fill" style="color:#e9a734"></i>
							<i class="bi bi-star-fill" style="color:#e9a734"></i>
							<i class="bi bi-star-fill" style="color:#e9a734"></i>
							<p>@item.Rating/5</p>
						}
						@if (item.Rating == 3)
						{
							<i class="bi bi-star-fill" style="color:#e9a734"></i>
							<i class="bi bi-star-fill" style="color:#e9a734"></i>
							<i class="bi bi-star-fill" style="color:#e9a734"></i>
							<p>@item.Rating/5</p>
						}
						@if (item.Rating == 2)
						{
							<i class="bi bi-star-fill" style="color:#e9a734"></i>
							<i class="bi bi-star-fill" style="color:#e9a734"></i>
							<p>@item.Rating/5</p>
						}
						@if (item.Rating == 1)
						{
							<i class="bi bi-star-fill" style="color:#e9a734"></i>
							<p>@item.Rating/5</p>
						}
					</td>
				</tr>
			}
		</tbody>
</table>}
@if(Model.Reviews.Count == 0)
{
	<h3 style="text-align:center; margin-top:15px; color:gray">There are no reviews yet...</h3>
}
