@model IEnumerable<FishingShop.Models.Category>

@{
    ViewData["Title"] = "Categories";
}

<h1>Categories</h1>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
<p>
    <a class="btn btn-dark" asp-action="Create"><i class="bi bi-plus-square-fill" style="margin-right:8px"></i>Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th style="font-weight:bold" class="text-center">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td style="font-weight:bold" class="align-middle">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td class="align-middle">
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.IdCategory" style="margin-left:5px; float:right"><i class="bi bi-pencil-square"></i>Edit</a>
                <a class="btn btn-secondary" asp-action="Details" asp-route-id="@item.IdCategory" style="margin-left:5px; float:right"><i class="bi bi-eye"></i>Details</a> 
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.IdCategory" style="margin-left:5px; float:right"><i class="bi bi-trash"></i>Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

